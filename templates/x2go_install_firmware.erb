set -e # exit on error
<% if /wheezy|squeeze|jessie/i.match(@x2go_tce_os) %>
sudo /usr/sbin/x2gothinclient_shell "echo 'deb <%= @x2go_tce_mirror %>  <%= @x2go_tce_os %> contrib non-free' > /etc/apt/sources.list.d/<%= @x2go_tce_os %>_non-free.list"
