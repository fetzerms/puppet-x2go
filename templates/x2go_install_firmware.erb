sudo /usr/sbin/x2gothinclient_shell "apt-get install --yes firmware-linux firmware-linux-nonfree firmware-bnx2 firmware-bnx2x firmware-myricom firmware-netxen  firmware-qlogic  firmware-ralink firmware-realtek intel-microcode amd64-microcode"
